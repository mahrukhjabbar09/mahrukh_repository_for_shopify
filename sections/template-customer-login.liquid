<div 
    class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8" 
    x-data="{ loginForm: true, pwRecoverForm: false }"
>
    <!-- Login Form -->
    <div x-show="loginForm" class="max-w-md w-full space-y-8">
        <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p>{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <input 
                        type="email" 
                        name="customer[email]" 
                        id="email_address" 
                        class="relative block w-full px-3 py-2 border" 
                        placeholder="Email address"
                        autocomplete="email"
                    >
                </div>
                {% if form.password_needed %}
                    <div class="my-2">
                        <input 
                            type="password" 
                            name="customer[password]" 
                            id="password" 
                            class="relative block w-full px-3 py-2 border" 
                            placeholder="Password" 
                            autocomplete="current-password"
                        >
                    </div>
                {% endif %}
                <div class="my-2 text-sm">
                    <a 
                        x-on:click="loginForm = false; pwRecoverForm = true" 
                        href="#" 
                        class="underline text-gray-500 hover:text-gray-900"
                    >
                        Forgot your password?
                    </a>
                </div>
                <div>
                    <button 
                        type="submit" 
                        class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
                    >
                        Sign in
                    </button>
                </div>
            {% endform %}
        </div>
    </div>

    <!-- Password Recovery Form -->
    <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
        <h1 class="text-center text-3xl font-bold mt-6">Recover your password</h1>
        <div class="mt-8">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p>{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <input 
                        type="email" 
                        name="email" 
                        id="email" 
                        class="relative block w-full px-3 py-2 border" 
                        placeholder="Email address" 
                        autocomplete="email"
                    >
                </div>
                <div>
                    <button 
                        type="submit" 
                        class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
                    >
                        Recover password
                    </button>
                </div>
                <div class="mt-8 text-sm">
                    <a 
                        x-on:click="loginForm = true; pwRecoverForm = false" 
                        href="#" 
                        class="underline text-gray-500 hover:text-gray-900"
                    >
                        Back to login
                    </a>
                </div>
            {% endform %}
        </div>
    </div>
</div>
